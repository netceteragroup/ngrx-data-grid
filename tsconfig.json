{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@env/*": [
        "src/environments/*"
      ],
      "grid": [
        "dist/grid"
      ],
      "grid/*": [
        "dist/grid/*"
      ],
      "@grid": [
        "projects/grid/src/lib"
      ],
      "@grid/*": [
        "projects/grid/src/lib/*"
      ],
      "*": ["types/*"]
    }
  }
}
